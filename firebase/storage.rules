rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Shared images folder - images can be reused across multiple events
    match /shared/cookies/{fileName} {
      // Allow anyone to read images (needed for voting)
      allow read: if true;
      
      // Only admins can upload/delete
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Events folder - authenticated write (including anonymous for test mode), public read
    // Kept for backward compatibility with existing events
    match /events/{eventId}/cookies/{fileName} {
      // Allow anyone to read images (needed for voting)
      allow read: if true;
      
      // Only admins can upload/delete
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Test events folder - allow authenticated users (including anonymous) for testing
    match /test_events/{eventId}/cookies/{fileName} {
      // Allow anyone to read test images
      allow read: if true;
      
      // Allow any authenticated user (including anonymous) to write in test mode
      allow write: if request.auth != null;
    }
    
    // Cropped individual cookie images - organized by event and category
    // These are created when admins use the Cookie Cropper to slice tray images
    match /cropped_cookies/{eventId}/{categoryId}/{fileName} {
      // Allow anyone to read (needed for voting UI and tagging page)
      allow read: if true;
      
      // Only admins can upload/delete cropped cookie images
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Test cropped cookies - allow authenticated users for testing
    match /cropped_cookies_test/{eventId}/{categoryId}/{fileName} {
      // Allow anyone to read test images
      allow read: if true;
      
      // Allow any authenticated user to write in test mode
      allow write: if request.auth != null;
    }
    
    // Uploads folder - for automated cookie segmentation pipeline input
    match /uploads/{batchId}/{fileName} {
      // Allow authenticated users to read their uploads
      allow read: if request.auth != null;
      
      // Only admins can upload
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Processed cookies folder - output from automated segmentation pipeline
    match /processed_cookies/{batchId}/{fileName} {
      // Public read for voting UI
      allow read: if true;
      
      // Only functions can write (via admin SDK)
      allow write: if false;
    }
  }
}

