{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Emulators",
      "type": "shell",
      "command": "npm run emulators:start:seed",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^.*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting Firebase emulators",
          "endsPattern": "All emulators ready! It is now safe to connect your app."
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Vite: Dev (Prod)",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "env": {
          "VITE_USE_EMULATOR": "false"
        }
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^.*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE",
          "endsPattern": "Local:"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Vite: Dev (Emulator)",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "env": {
          "VITE_USE_EMULATOR": "true"
        }
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^.*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "vite",
          "endsPattern": "Local:.*http"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Start All (Emulator)",
      "dependsOn": [
        "Start Emulators",
        "Vite: Dev (Emulator)"
      ],
      "dependsOrder": "parallel"
    }
  ]
}
